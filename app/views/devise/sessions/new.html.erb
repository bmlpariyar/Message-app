<h2 class="text-white fs-1 mb-4" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control bg-dark text-white my-1", placeholder:"Enter your Email", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "form-control bg-dark text-white", placeholder:"Enter your Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %> 
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input my-2 " %>
      <%= f.label :remember_me, class: "text-white my-1" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
