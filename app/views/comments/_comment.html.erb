 <p><%= comment.content %></p>
 <p class="m-0 p-0">Posted by: <i><%= comment.user.email%></i> <%= time_ago_in_words(@message.created_at)%> ago</p>


<% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>
        <%= link_to 'Edit', edit_message_comment_path(comment.message, comment), class: 'link' %>
        <%= link_to 'Delete', message_comment_path(comment.message, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link' %>
    <% end %>
<% end %>

 