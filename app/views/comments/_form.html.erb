<%= simple_form_for([@message, @message.comments.build])  do |f| %>
    <div class="form-inputs">
        <%= f.input :content, label: '_', placeholder: "Enter your comment",  input_html: { class: 'form-control bg-dark text-white' } %>
    </div>
    <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary my-1' %>
    </div>
<% end %>