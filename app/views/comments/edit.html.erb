<h2 class="text-white fw-bold">Edit Comment:</h2>
<%= simple_form_for([@message, @comment]) do |f| %>
    <%= f.input :content, label: 'Comment:', label_html: { class:'text-white fs-3' }, input_html: { class: 'form-control bg-transparent text-white fs-5' } %>
    <%= f.submit 'Submit', class: 'btn btn-primary my-1', disable_with: 'Submiting...' %>
<% end %>